<resources>

    <!-- Style texte section titre -->
    <style name="Widget.PsaImmoTool.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/md_theme_on_background</item>
        <item name="android:fontWeight">600</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Style bouton primaire -->
    <style name="Widget.PsaImmoTool.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_theme_on_primary</item>
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="android:fontWeight">600</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Style bouton secondaire -->
    <style name="Widget.PsaImmoTool.SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="strokeColor">@color/md_theme_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Style texte simple -->
    <style name="App.TextView" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>
